with "apq.gpr";

project APQ.PostgreSQL is

	version := APQ.version;
	prefix := $prefix
	
	
	

	for Languages use ( "Ada", "C" );
	
	for Source_Dirs use ( prefix & "include/apq-postgresql" );
	
	-- LIBRARY
	for Library_Dir use prefix & "lib";
	for Library_Name use "apq-postgresql";
	for Library_Kind use APQ'Library_kind;
	for Library_Version use "libapq-postgresql.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;



	package Linker is
		for Default_Switches ("Ada") use (
			"-lpq",
			"-lapq-postgresqlhelp"
		);
		--for Default_Switches ("ada") use ("-ldl", "-lpq");
	end Linker;

	for Externally_Built use "true";

end APQ.PostgreSQL;

