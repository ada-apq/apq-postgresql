limited with "./apq-postgresql.gpr";

project apq_postgresql_version is

   version     := $version;     -- string
   name_base   := $name_base;   -- string
   --system_libs  := $system_libs;

   --- type lib_installed_prefix_type is ( $prefix_list );  -- string_list  --- Does need of using a "rename" here ? :-) Obrigado Jesuis !!!!!!!!!!!! :-)

   lib_installed_prefix : apq-postgresql.libs_installeds_Type := apq-postgresql.lib_installed_prefix;
   system_lib  : apq-postgresql.system_libs_type := apq_postgresql_version;

   include_path := "" & lib_installed_prefix & "/include/" & name_base & "/" & version ;

   lib_path     := "" & lib_installed_prefix & "/lib" ;
   gpr_path     := "" & lib_path & "/gnat";
   gpr_include_path :=  "" & include_path ;

end apq_postgresql_version;

