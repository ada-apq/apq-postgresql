-- scrip to gprbuild making apq-postgresqlhelp _static_ lib :-)
project Apq_postgresqlhelp_bs is

   version := $version;

   for Languages use ("C");
   for Source_Dirs use ("src-c");
   for Object_Dir use "obj-c/static";
   for Library_Name use "apq-postgresqlhelp" ;
   for Library_Dir use "lib-c-static";
   for Library_Kind use "static";
   for Library_Options use ( $LIBDIR2 , "-lssl" , "-lpq");
   for Externally_Built use "false";

package Compiler is
      for Default_Switches ("c") use ("-O2");
   end Compiler;

end Apq_postgresqlhelp_bs;

