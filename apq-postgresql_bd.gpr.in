with "apq";

project Apq.postgresql_bd is

   version := $version;

   for Languages use ( "ADA" , "C");
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Library_ALI_Dir use "lib_ali";
   for Library_Name use "apq-postgresql" ;
   for Library_Dir use "lib";
   for Library_Kind use "dynamic";
   for Library_Version use "libapq-postgresql.so." & version ;
   for Library_Options use ("-Wl,--export-dynamic", $LIBDIR , "-lssl" , "-lpq", "-lapq-postgresqlhelp" );
   for Externally_Built use "false";

package Compiler is
      for Default_Switches ("ADA") use ("-O2","-gnat05");
   end Compiler;

end Apq.postgresql_bd;

