with "apq.gpr";

project APQ.PostgreSQL is

	version := APQ.version;
	
	
	type Supported_OS is ("WIN32", "GNU/Linux");
	
	target: Supported_OS := external("TARGET", "GNU/Linux");
	

	for Languages use ( "Ada", "C" );
	
	for Source_Dirs use ( "src" );
	
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "apq-postgresql";
	for Library_Kind use "dynamic";
	for Library_Version use "libapq-postgresql.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;



	package Linker is
		for Default_Switches ("Ada") use
			APQ.Linker'Default_Switches("Ada") &
			"-lpq" &
			"-lapq-postgresqlhelp";
		--for Default_Switches ("ada") use ("-ldl", "-lpq");
	end Linker;

end APQ.PostgreSQL;

